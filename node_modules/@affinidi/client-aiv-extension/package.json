{
  "name": "@affinidi/client-aiv-extension",
  "version": "1.6.1",
  "description": "Communicate with AIV Chrome Extension",
  "author": "Affinidi",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run tsc",
    "tsc": "tsc -p tsconfig-build.json",
    "lint": "eslint src/**/*.ts test/**/*.ts",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest 'test\\/.+\\.test\\.ts' --coverage --testTimeout=500",
    "checkLicenses": "license-checker --production --failOn 'AGPL 3.0;LGPL 2.1'",
    "prepare-commit-hooks": "npm install --global commitizen@4.2.4 cz-conventional-changelog@3.3.0 @commitlint/config-conventional@16.2.1 @commitlint/cli@16.2.3",
    "prepare:dev": "is-ci || (husky install && npm run prepare-commit-hooks)",
    "prepare": "node -e \"process.exit(process.env.NODE_ENV === 'production' ? 0 : 1)\" || npm run prepare:dev",
    "semantic-release": "npx semantic-release"
  },
  "devDependencies": {
    "@affinidi/eslint-config": "^2.0.0-beta.0",
    "@affinidi/prettier-config": "^2.0.0-beta.0",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@sphereon/pex": "^2.0.1",
    "@sphereon/pex-models": "^2.0.2",
    "@types/chrome": "^0.0.241",
    "@types/jest": "^29.5.0",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "license-checker": "^25.0.1",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/affinidi/client-aiv-extension.git"
  },
  "keywords": [
    "affinidi",
    "wallet",
    "chrome-extension"
  ],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/affinidi/client-aiv-extension/issues"
  },
  "homepage": "https://github.com/affinidi/client-aiv-extension#readme",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog",
      "types": {
        "feat": {
          "description": "A new feature (minor)",
          "title": "Features"
        },
        "fix": {
          "description": "A bug fix (patch)",
          "title": "Bugs"
        },
        "perf": {
          "description": "A change which improves performance (patch)",
          "title": "Performance"
        },
        "chore": {
          "description": "A CI change (no-release)",
          "title": "CI"
        },
        "docs": {
          "description": "A documentation change (no-release)",
          "title": "Documentation"
        }
      }
    }
  }
}
